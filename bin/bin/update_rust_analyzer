#!/bin/bash
FILENAME=rust-analyzer-x86_64-unknown-linux-gnu.gz
if [ "$(uname)" = "Darwin" ]; then
  FILENAME=rust-analyzer-x86_64-apple-darwin.gz
fi
curl -L https://github.com/rust-analyzer/rust-analyzer/releases/latest/download/${FILENAME} | gunzip -c - > /tmp/rust-analyzer
chmod +x /tmp/rust-analyzer
mv /tmp/rust-analyzer ~/bin/rust-analyzer
