{
  "$schema": "https://raw.githubusercontent.com/LuaLS/vscode-lua/master/setting/schema.json",
  "runtime": {
    "version": "LuaJIT"
  },
  "workspace": {
    "library": [
      "lua",
      "$VIMRUNTIME"
    ],
    "checkThirdParty": false
  },
  "diagnostics": {
    "libraryFiles": "Disable",
    "groupFileStatus": {
      "luadoc" : "Opened",
      "redefined" : "Opened",
      "unbalanced" : "Opened",
      "unused" : "Opened"
    },
    "groupSeverity": {
      "strong": "Warning",
      "strict": "Warning"
    },
    "unusedLocalExclude": [ "_*" ]
  }
}
